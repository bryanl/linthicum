<p>Create Article</p>

<div id="errors"><%= error_messages_for :article %></div>

<% form_for([:admin, @article]) do |f| %>
<p>
	<label for="article[title]">Title:</label>
	<%= f.text_field :title %>
</p>

<p>
	<label for="article[body]">Body:</label>
	<%= f.text_area :body %>
</p>

<p>
	<%= submit_tag %>
</p>

<% end %>